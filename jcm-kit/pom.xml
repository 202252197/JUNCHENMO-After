        <hutool.version>5.8.35</hutool.version>
        <jackson.version>2.13.5</jackson.version>
    </properties>

    <dependencyManagement>
        <dependencies>
            <dependency>
                <groupId>com.jcm.kit</groupId>
                <artifactId>jcm-third-party</artifactId>
                <version>${jcm.kit.version}</version>
            </dependency>
        </dependencies>
    </dependencyManagement>
</project>